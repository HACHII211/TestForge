<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.DefectStatusMapper">

    <!-- resultMap 映射 -->
    <resultMap id="DefectStatusMap" type="com.example.entity.DefectStatus">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
    </resultMap>

    <!-- 查询全部（不分页；若需要分页请配合 PageHelper） -->
    <select id="selectAll" resultMap="DefectStatusMap">
        SELECT id, name, description
        FROM defect_status
        ORDER BY id
    </select>

    <!-- 根据 id 查询 -->
    <select id="selectById" parameterType="int" resultMap="DefectStatusMap">
        SELECT id, name, description
        FROM defect_status
        WHERE id = #{id}
    </select>

    <!-- 插入：回填自增 id -->
    <insert id="insert" parameterType="com.example.entity.DefectStatus" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO defect_status (name, description)
        VALUES (#{name}, #{description})
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="com.example.entity.DefectStatus">
        UPDATE defect_status
        SET
            name = #{name},
            description = #{description}
        WHERE id = #{id}
    </update>

    <!-- 删除 -->
    <delete id="deleteById" parameterType="int">
        DELETE FROM defect_status WHERE id = #{id}
    </delete>

</mapper>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.DefectPriorityMapper">
    <resultMap id="BaseMap" type="com.example.entity.DefectPriority">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
    </resultMap>

    <select id="selectAll" resultMap="BaseMap">
        SELECT id, name, description FROM defect_priority ORDER BY id
    </select>

    <select id="selectById" parameterType="int" resultMap="BaseMap">
        SELECT id, name, description FROM defect_priority WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.example.entity.DefectPriority" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO defect_priority (name, description) VALUES (#{name}, #{description})
    </insert>

    <update id="update" parameterType="com.example.entity.DefectPriority">
        UPDATE defect_priority SET name = #{name}, description = #{description} WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="int">
        DELETE FROM defect_priority WHERE id = #{id}
    </delete>

</mapper>
